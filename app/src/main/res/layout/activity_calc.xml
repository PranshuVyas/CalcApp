<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".CalcActivity">

    <EditText
        android:id="@+id/etx_leftvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Value 1"
        android:layout_marginLeft="10dp"
        android:background="@android:color/background_light"
        android:inputType="number"
        android:maxLines="1" />

    <TextView
        android:id="@+id/txt_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/etx_leftvalue"
        android:background="@android:color/background_light"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/etx_rightvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_operation"
        android:background="@android:color/background_light"
        android:hint="Value 2"
        android:inputType="number"
        android:maxLines="1" />

    <TextView
        android:id="@+id/txt_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/etx_rightvalue"
        android:text="="
        android:background="@android:color/background_light"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@android:color/background_light"
        android:layout_toRightOf="@id/txt_equals"
        android:text="Result" />

    <Button
        android:id="@+id/btn_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etx_leftvalue"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"
        android:text="+" />

    <Button
        android:id="@+id/btn_subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_sum"
        android:layout_below="@id/etx_rightvalue"
        android:background="@android:color/background_light"
        android:layout_margin="10dp"
        android:text="-" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/btn_sum"
        android:background="@android:color/background_light"
        android:text="X" />

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_subtract"
        android:layout_toRightOf="@id/btn_multiply"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"
        android:text="/" />

    <Button
        android:id="@+id/btn_mod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_subtract"
        android:layout_below="@id/txt_result"
        android:background="@android:color/background_light"
        android:layout_marginLeft="10dp"
        android:text="Mod" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_divide"
        android:layout_below="@+id/btn_mod"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/background_light"
        android:text="CE" />

    <Button
        android:id="@+id/btn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@+id/btn_multiply"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"/>

    <Button
        android:id="@+id/btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_toRightOf="@id/btn_one"
        android:layout_below="@id/btn_divide"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"/>

    <Button
        android:id="@+id/btn_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_toRightOf="@id/btn_two"
        android:layout_below="@id/btn_divide"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"/>

    <Button
        android:id="@+id/btn_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@id/btn_one"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"/>

    <Button
        android:id="@+id/btn_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_toRightOf="@+id/btn_four"
        android:layout_below="@id/btn_two"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"/>

    <Button
        android:id="@+id/btn_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_toRightOf="@id/btn_five"
        android:layout_below="@id/btn_three"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"/>

    <Button
        android:id="@+id/btn_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_below="@id/btn_four"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"/>

    <Button
        android:id="@+id/btn_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_toRightOf="@+id/btn_seven"
        android:layout_below="@id/btn_four"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"/>

    <Button
        android:id="@+id/btn_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_toRightOf="@+id/btn_eight"
        android:layout_below="@id/btn_four"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"/>

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@id/btn_seven"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"/>

</RelativeLayout>